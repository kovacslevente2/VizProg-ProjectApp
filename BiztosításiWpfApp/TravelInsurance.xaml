<Page x:Class="OpenPage.TravelInsurance"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
       xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
      xmlns:local="clr-namespace:OpenPage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TravelInsurance">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/UIColors.xaml"/>
                <ResourceDictionary Source="/Styles/ButtonStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Border CornerRadius="10"
BorderThickness="1"
 Opacity="1">
        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="Bisque" Offset="0"/>
                <GradientStop Color="Gainsboro" Offset="0.5"/>
                <GradientStop Color="GreenYellow" Offset="1"/>
            </LinearGradientBrush>
        </Border.BorderBrush>

        <Border.Background>
            <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                <GradientStop Color="DarkGray" Offset="0."/>
                <GradientStop Color="Black" Offset="0.75"/>
            </LinearGradientBrush>
        </Border.Background>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border CornerRadius="10,0,0,10"
                    Grid.Column="0">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0.7">
                        <GradientStop Color="{StaticResource secondaryBackColor1}" Offset="0"/>
                        <GradientStop Color="{StaticResource secondaryBackColor2}" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <StackPanel>
                    <RadioButton Style="{StaticResource menuButton}"
                                 Tag="{StaticResource color1}"
                                 Click="btnHome_Click">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="Home" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Főoldal" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton x:Name="btncontractmanagement" Click="btncontractmanagement_Click" Style="{StaticResource menuButton}"
                                 Tag="{StaticResource color1}">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="AddressBook" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Szerződések kezelése" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton Style="{StaticResource menuButton}"
             Tag="{StaticResource color1}"
             Click="btnlifeinsurance_Click">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="Heart" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Életbiztosítás" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton Style="{StaticResource menuButton}"
Tag="{StaticResource color1}"
Click="btnhouseinsurance_Click">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="HouseChimneyUser" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Lakásbiztosítás" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>
                    <RadioButton Style="{StaticResource menuButton}"
Tag="{StaticResource color1}"
Click="btncarinsurance_Click">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="Car" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Autóbiztosítás" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton Style="{StaticResource menuButton}"
Tag="{StaticResource color1}"
IsChecked="True">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="Plane" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Utasbiztosítás" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton x:Name="btndamageevents" Click="btndamageevents_Click" Style="{StaticResource menuButton}"
             Tag="{StaticResource color1}">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="CircleExclamation" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Káresemények" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton x:Name="btnsettings" Click="btnsettings_Click" Style="{StaticResource menuButton}"
Tag="{StaticResource color1}">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="Gear" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Beállítások" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>
                </StackPanel>
            </Border>

            <Border CornerRadius="0,10,10,0"
                Grid.Column="1">
                <Grid>
                    <Image Source="/Images/home-image.jpg" Stretch="UniformToFill"/>
                    <Border Background="#4a78f9" Opacity="0.7"/>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="25"/>
                            <RowDefinition Height="35"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="25"/>
                                <ColumnDefinition Width="25"/>
                                <ColumnDefinition Width="5"/>
                            </Grid.ColumnDefinitions>

                            <Button x:Name="btnMinimize" 
                                    BorderThickness="0"
                                    Content="-"
                                    Foreground="White"
                                    FontSize="16"
                                    FontFamily="Montserrat"
                                    Cursor="Hand"
                                    Grid.Column="1"
                                    Click="btnMinimize_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="#28AEED"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#278BEF"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>

                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Width="18" Height="18"
                                                CornerRadius="9"
                                                Background="{TemplateBinding Background}">
                                            <ContentPresenter VerticalAlignment="Center"
                                                              HorizontalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>

                            <Button x:Name="btnClose" 
                                    BorderThickness="0"
                                    Content="X"
                                    Foreground="White"
                                    FontSize="12"
                                    FontFamily="Montserrat"
                                    Cursor="Hand"
                                    Grid.Column="2"
                                    Click="btnClose_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="#DA34AE"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#C62DAE"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>

                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Width="18" Height="18"
                                                CornerRadius="9"
                                                Background="{TemplateBinding Background}">
                                            <ContentPresenter VerticalAlignment="Center"
                                                              HorizontalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>

                        <TextBlock Text="Utasbiztosítás"
                                   FontSize="20"
                                   Foreground="White"
                                   Margin="10,0,0,0"
                                   Grid.Row="1"/>
                        <StackPanel Grid.Row="2" Margin="10,0,0,0">
                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                <TextBlock Text ="Válasszon biztosítót" 
                                       FontSize="15"
                                       Foreground="White"
                                       VerticalAlignment="Top"/>
                                <ComboBox x:Name="cbInsurer" Width="100" Height="25" Margin="10,0,0,0" VerticalAlignment="Top" SelectionChanged="ComboBox_SelectionChanged" SelectedIndex="0" >
                                
                                </ComboBox>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                <TextBlock Text="Hónapok száma:" 
                                     FontSize="15"
                                     Foreground="White"
                                     VerticalAlignment="Top"
                                     Margin="0,0,10,0"/>
                                <TextBox x:Name="tbMonth" Width="150" 
                                      Height="25"
                                      VerticalAlignment="Top"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                <TextBlock Text="Havi Összeg:" 
                                     FontSize="15"
                                     Foreground="White"
                                     VerticalAlignment="Top"
                                     Margin="0,0,10,0"/>
                                <TextBox x:Name="tbAmount" Width="130" 
                                   Height="20"
                                   Margin="0,4,0,0"
                                   VerticalAlignment="Top"
                                   Text="0"/>
                            </StackPanel>
                            <Button x:Name="btnContract" Content="Megkötöm!"  Width="80" Height="20"  Click="btnContract_Click"/>
                        </StackPanel>

                        <ScrollViewer Grid.Row="2" Margin="10,150,10,0" VerticalScrollBarVisibility="Auto">
                            <StackPanel>
                                <TextBlock Text="Utasbiztosítási Tippek"
                                         FontSize="20"
                                         Foreground="White"
                                         FontWeight="Bold"
                                         Margin="0,0,0,20"/>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                        <Border Background="#4a78f9" 
                                                CornerRadius="10" 
                                                Margin="0,0,0,10"
                                                Padding="15">
                                            <StackPanel>
                                                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                                    <fa:IconImage Icon="Plane" 
                                                                Foreground="White" 
                                                                Width="20" 
                                                                Height="20"/>
                                                    <TextBlock Text="Alap Utasbiztosítás" 
                                                             Foreground="White" 
                                                             FontWeight="Bold" 
                                                             Margin="5,0,0,0"/>
                                                </StackPanel>
                                                <TextBlock Text="Alapvető utasbiztosítási fedezet utazás során"
                                                         Foreground="White"
                                                         TextWrapping="Wrap"/>
                                            </StackPanel>
                                        </Border>

                                        <Border Background="#4a78f9" 
                                                CornerRadius="10" 
                                                Margin="0,0,0,10"
                                                Padding="15">
                                            <StackPanel>
                                                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                                    <fa:IconImage Icon="Stethoscope" 
                                                                Foreground="White" 
                                                                Width="20" 
                                                                Height="20"/>
                                                    <TextBlock Text="Egészségbiztosítás" 
                                                             Foreground="White" 
                                                             FontWeight="Bold" 
                                                             Margin="5,0,0,0"/>
                                                </StackPanel>
                                                <TextBlock Text="Orvosi ellátás és kezelés fedezete külföldön"
                                                         Foreground="White"
                                                         TextWrapping="Wrap"/>
                                            </StackPanel>
                                        </Border>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                        <Border Background="#4a78f9" 
                                                CornerRadius="10" 
                                                Margin="0,0,0,10"
                                                Padding="15">
                                            <StackPanel>
                                                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                                    <fa:IconImage Icon="UserInjured" 
                                                                Foreground="White" 
                                                                Width="20" 
                                                                Height="20"/>
                                                    <TextBlock Text="Balesetbiztosítás" 
                                                             Foreground="White" 
                                                             FontWeight="Bold" 
                                                             Margin="5,0,0,0"/>
                                                </StackPanel>
                                                <TextBlock Text="Balesetbiztosítási fedezet utazás során"
                                                         Foreground="White"
                                                         TextWrapping="Wrap"/>
                                            </StackPanel>
                                        </Border>

                                        <Border Background="#4a78f9" 
                                                CornerRadius="10" 
                                                Margin="0,0,0,10"
                                                Padding="15">
                                            <StackPanel>
                                                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                                    <fa:IconImage Icon="Suitcase" 
                                                                Foreground="White" 
                                                                Width="20" 
                                                                Height="20"/>
                                                    <TextBlock Text="Poggyászbiztosítás" 
                                                             Foreground="White" 
                                                             FontWeight="Bold" 
                                                             Margin="5,0,0,0"/>
                                                </StackPanel>
                                                <TextBlock Text="Poggyász elvesztése vagy károsodása esetén"
                                                         Foreground="White"
                                                         TextWrapping="Wrap"/>
                                            </StackPanel>
                                        </Border>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Page> 