<Page x:Class="BiztositasKezelo.a_HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BiztositasKezelo"
      xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="a_HomePage">

    <Border CornerRadius="10"
            BorderThickness="1"
            Opacity="1">
        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="Bisque" Offset="0"/>
                <GradientStop Color="Gainsboro" Offset="0.5"/>
                <GradientStop Color="GreenYellow" Offset="1"/>
            </LinearGradientBrush>
        </Border.BorderBrush>

        <Border.Background>
            <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                <GradientStop Color="DarkGray" Offset="0."/>
                <GradientStop Color="Black" Offset="0.75"/>
            </LinearGradientBrush>
        </Border.Background>

        <Grid>
            <Image Source="/Images/home-image.jpg" Stretch="UniformToFill"/>
            <Border Background="#4a78f9" Opacity="0.7"/>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="5"/>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="btnMinimize" 
                            BorderThickness="0"
                            Content="-"
                            Foreground="White"
                            FontSize="16"
                            FontFamily="Montserrat"
                            Cursor="Hand"
                            Grid.Column="1"
                            Click="btnMinimize_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#28AEED"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#278BEF"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="18" Height="18"
                                        CornerRadius="9"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button x:Name="btnClose" 
                            BorderThickness="0"
                            Content="X"
                            Foreground="White"
                            FontSize="12"
                            FontFamily="Montserrat"
                            Cursor="Hand"
                            Grid.Column="2"
                            Click="btnClose_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#DA34AE"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#C62DAE"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="18" Height="18"
                                        CornerRadius="9"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Felhasználók kezelése"
                             FontSize="20"
                             Foreground="White"
                             Margin="10,0,0,0"/>

                    <StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Right" Margin="0,0,10,0">
                        <TextBlock Text="Kijelentkezés"
                                 Foreground="White"
                                 FontSize="12"
                                 VerticalAlignment="Center"
                                 Margin="0,0,10,0"/>
                        <Button x:Name="btnLogOut" 
                                Width="30"
                                Height="30"
                                BorderThickness="0"
                                Foreground="White"
                                FontSize="10"
                                FontFamily="Montserrat"
                                Cursor="Hand"
                                Click="btnLogOut_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#4a78f9"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="LightBlue"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="5"
                                            Padding="10,5">
                                        <fa:IconImage Icon="RightFromBracket"
                                                      Foreground="White"
                                                      Width="10"
                                                      Height="10"
                                                      VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </Grid>

                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="59*"/>
                        <ColumnDefinition Width="341*"/>
                    </Grid.ColumnDefinitions>
                    <DockPanel Grid.ColumnSpan="2">
                        

                        <ComboBox x:Name="cmbUsers"
                                 Width="200"
                                 Height="30"
                                 Margin="30,10,0,10"
                                 DockPanel.Dock="Top"
                                 Foreground="White"
                                 FontFamily="Montserrat"
                                 Background="#4a78f9"
                                 BorderBrush="#0055ff"
                                 BorderThickness="1"/>

                        <DataGrid x:Name="myDataGrid" x:FieldModifier="public" AutoGenerateColumns="false" ColumnWidth="*"
                                  Background="#4a78f9"
                                  Foreground="Black"
                                  RowBackground="#ffffff"
                                  BorderThickness="1"
                                  BorderBrush="Black"
                                  FontFamily="Montserrat"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  CanUserResizeRows="False"
                                  HorizontalGridLinesBrush="#3A3A3A"
                                  VerticalGridLinesBrush="#3A3A3A"
                                  HeadersVisibility="Column"
                                  Margin="30" SelectionChanged="myDataGrid_SelectionChanged">
                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="#0055ff"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="Padding" Value="10,5"/>
                                    <Setter Property="BorderThickness" Value="0,0,1,1"/>
                                    <Setter Property="BorderBrush" Value="#3A3A3A"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Szerződés Az" Binding="{Binding SzerzodesId}"/>
                                <DataGridTextColumn Header="Név" Binding="{Binding BiztositoNev}"/>
                                <DataGridTextColumn Header="Tipus" Binding="{Binding BiztositoTipus}"/>
                                <DataGridTextColumn Header="Összeg" Binding="{Binding Osszeg}"/>
                                <DataGridTextColumn Header="Hónap" Binding="{Binding Honap}"/>
                                <DataGridTextColumn Header="Dátum" Binding="{Binding Datum}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </DockPanel>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Page>
